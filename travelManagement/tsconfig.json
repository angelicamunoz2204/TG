{
	"compilerOptions": {
		"module": "CommonJS",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"target": "ES2016",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"*": ["node_modules/*", "api/*"]
		}
	},
	"include": ["api/**/*.ts"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
